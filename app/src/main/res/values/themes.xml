<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SMU" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#1466E0</item>
        <item name="colorPrimaryVariant">#1466E0</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#1466E0</item>
        <item name="colorSecondaryVariant">#1466E0</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

    </style>

    <style name="noActionBar" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">#1466E0</item>
        <item name="colorPrimaryVariant">#1466E0</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!--        <item name="android:windowFullscreen">true</item>-->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

</resources>